package com.ExcelOperrions;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import org.apache.commons.io.FileUtils;
import org.apache.poi.ss.usermodel.Row;
import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;
import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class Excel_Newtours_Regestration
{
	public static void main(String[] args) throws IOException 
	{
		WebDriver driver=null;
		String url="http://newtours.demoaut.com";
		System.setProperty("weddiver.chrome.driver","./driverFiles/chromedriver.exe");
		driver=new ChromeDriver();
		driver.get(url);
		FileInputStream file=new FileInputStream("./src/com/SingleTestDate/ExcelNewtoursRegistration.xlsx");
		//Identifying the workbook in the above file
		XSSFWorkbook workbook=new XSSFWorkbook(file);
		//Identifying the particular sheet in the above workbook
		XSSFSheet sheet=workbook.getSheet("sheet1");
		//Identifying a particular row in the sheet
		int rowcount=sheet.getLastRowNum();
		Row row=sheet.getRow(1);
		driver.findElement(By.linkText("REGISTER")).click();
		WebElement username=driver.findElement(By.name("email"));
		username.sendKeys(row.getCell(0).getStringCellValue());
		WebElement password=driver.findElement(By.name("password"));
		password.sendKeys(row.getCell(1).getStringCellValue());
		WebElement confirm_password=driver.findElement(By.name("confirmPassword"));
		confirm_password.sendKeys(row.getCell(2).getStringCellValue());
		driver.findElement(By.id("register")).click();
		String expected_register="mercury";
		System.out.println("expected registration text is "+expected_register);
		String actual_register=driver.getTitle();
		System.out.println("actual registration text is "+actual_register);
		if(actual_register.contains(expected_register))
		{
			System.out.println("user registration is successfully PASS");
			row.createCell(3).setCellValue("Registered PASS");
		}
		else
		{
			System.out.println("user registration is failed FAIL");
			row.createCell(3).setCellValue("Registered FAIL");
		}
		FileOutputStream file1=new FileOutputStream("./src/com/SingleTestDate/ExcelNewtoursRegistration.xlsx");
		workbook.write(file1);
		File bing_screenshot=((TakesScreenshot)driver).getScreenshotAs(OutputType.FILE);
		FileUtils.copyFile(bing_screenshot,new File("./screenshots/orangehrmregistration.png"));
	    driver.quit();
		}
	
	}


